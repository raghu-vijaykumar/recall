{
  "name": "recall",
  "version": "1.0.0",
  "description": "A Study App",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:frontend": "vite build",
    "pythonVersion": "3.13",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:backend-pyinstaller": "cd backend && python -m venv .venv-build && .\\.venv-build\\Scripts\\python.exe -m pip install pyinstaller && .\\.venv-build\\Scripts\\python.exe -m pip install -r requirements.txt && .\\.venv-build\\Scripts\\python.exe -m PyInstaller --onefile --name recall-backend main.py --hidden-import uvicorn --collect-all uvicorn --add-data \"app/static;app/static\"",
    "build": "npm run build:frontend && npm run build:electron && npm run build:backend-pyinstaller && copyfiles -u 1 \"database/**/*\" dist",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "clean-rebuild-make": "rimraf backend/dist && rimraf backend/build && rimraf dist && npm install && npm run build && electron-forge make --verbose",
    "full-clean-build-run": "call .\\scripts\\clean-rebuild-run.bat",
    "dev:frontend": "vite",
    "dev:electron": "npm run build:electron && electron-forge start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\""
  },
  "author": "Raghu Vijaykumar",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "electron": "^38.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "rimraf": "^6.0.0"
  },
  "dependencies": {
    "@types/mime-types": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "mime-types": "^3.0.1",
    "electron-log": "^5.1.6"
  }
}
